{
  "name": "vite-plugin-localhost-certs",
  "version": "1.1.0",
  "description": "HTTPS certs for localhost vite dev-server",
  "keywords": [
    "vite",
    "https",
    "certificate"
  ],
  "author": "Avin Lambrero <avin.github@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avin/vite-plugin-localhost-certs.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "localhost-certs": "^1.1.0"
  },
  "devDependencies": {
    "prettier": "^2.8.3",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "sourcemap": false,
    "dts": {
      "compilerOptions": {
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
      }
    },
    "splitting": false,
    "clean": true,
    "format": [
      "esm",
      "cjs"
    ]
  }
}
